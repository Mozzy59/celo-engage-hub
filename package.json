{
  "name": "@tebberen/celo-engage-hub",
  "version": "1.0.0",
  "description": "Enterprise-grade decentralized social engagement platform on Celo blockchain featuring community governance, badge rewards, and social verification mechanisms",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=3000 --host=localhost --no-browser --wait=500",
    "start": "npm run dev",
    "build": "npm run validate && npm run security:audit && npm run test:coverage && npm run bundle:analyze",
    "build:production": "NODE_ENV=production npm run build",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage --reporter=html",
    "test:ci": "npm run test:coverage -- --reporter=json",
    "test:contracts": "hardhat test",
    "lint": "eslint . --ext .js,.html,.json --fix --max-warnings=0",
    "lint:ci": "eslint . --ext .js,.html,.json --max-warnings=0",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level high && npx audit-ci --moderate",
    "security:fix": "npm audit fix --force",
    "bundle:analyze": "webpack-bundle-analyzer dist/bundle.js",
    "deploy": "gh-pages -d . --dotfiles --message 'Deploy Celo Engage Hub v${npm_package_version}'",
    "predeploy": "npm run build:production",
    "validate": "npm run lint:ci && npm run format:ci && npm run type-check",
    "prepare": "husky install",
    "release": "standard-version",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "docs": "typedoc --out docs src",
    "docs:serve": "serve docs",
    "clean": "rimraf dist docs coverage .nyc_output",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "docker:build": "docker build -t celo-engage-hub .",
    "docker:run": "docker run -p 3000:3000 celo-engage-hub",
    "postinstall": "echo 'ðŸš€ Celo Engage Hub installed! Run npm run dev to start development'"
  },
